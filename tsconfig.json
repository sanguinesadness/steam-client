{
    "compilerOptions": {
        "allowJs": true,
        "module": "commonjs",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "dist",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "paths": {
            "*": [
                "node_modules/*"
            ]
        },
        "jsx": "react"
    },
    "include": [
        "src/**/*",
        "src/components",
        "src/custom.d.ts"
    ],
    "files": [
        "src/custom.d.ts"
    ]
}